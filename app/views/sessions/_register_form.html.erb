<div data-toggle-form-target="registerForm" class="hidden mt-10 sm:mx-auto sm:w-full sm:max-w-sm border-2 border-bg-slate-300 rounded">
    <%= form_with class: "space-y-6 p-4" do |form|%>
    <form class="space-y-6 p-4" action="">
      <!-- Add your registration fields here -->
      <div>
        <%= form.label :username, "Username", class: "block text-sm font-medium leading-6 text-gray-900" %>
        <div>
          <%= form.text_field :username,  placeholder: "Enter username", class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"   %>
        </div>
      </div>
       <div>
        <%= form.label :email, "Email address", class: "block text-sm font-medium leading-6 text-gray-900" %>
        <div>
          <%= form.text_field :email,  placeholder: "Enter email address", class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"   %>
        </div>
      </div>
      <div>
        <%= form.label :password, "Password", class: "block text-sm font-medium leading-6 text-gray-900"%>
        <div>
          <%= form.password_field :password, placeholder: "Password",  class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
        </div>
      </div>

      <div>
        <%= form.submit "SignUp" , class: "flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
      </div>
    <% end %>

    <p class="mt-0 text-center text-sm text-gray-500">
      Already have an account?
      <a data-action="click->toggle-form#showLogin" class="font-semibold leading-6 text-indigo-600 hover:text-indigo-500">Log In</a>
    </p>
</div>