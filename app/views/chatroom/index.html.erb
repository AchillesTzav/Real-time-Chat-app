<div class="flex items-center justify-center ">
  <div class="p-8 bg-black rounded-full rounded-lg shadow-xl transition ease-in-out delay-150 hover:-translate-y-1 hover:scale-110  duration-300 " >
    <%= image_tag 'favicon.ico' %>
  </div>
</div>
<div class="flex items-center justify-center pt-2">
  <p class="italic  text-2xl">Say Something!</p>
</div>

<div class="grid justify-items-center grid-rows-3 grid-flow-col gap-2.5 mt-24" >
  <div class="row-span-3  w-full">
      <div class="block h-full p-6 bg-white border border-gray-200 rounded-lg shadow hover:bg-gray-100">
        
        <div class=" w-96 text-gray-700">
          <div class="flex items-start gap-2.5">
            <div id="message-container" class="flex flex-col overflow-y-auto  w-full  max-w-[320px] leading-1.5 ">
               <%= render @messages %>
            </div>
          </div>
        </div>
      </div>
    <div >
      <%= form_with model: Message.new, url: message_path, local: true, class: "flex rounded-lg shadow-sm" do |form| %>

        <%= form.text_field :body, placeholder: "Enter a message...", class: "mt-4 py-3 px-4 block w-full border-gray-200 shadow-sm rounded-s-lg text-sm focus:z-10 focus:border-blue-500 focus:ring-blue-500 " %>

        <%= form.submit "Send" , class: "mt-4 py-3 px-4 inline-flex justify-center items-center gap-x-2 text-sm font-semibold rounded-e-md border border-transparent bg-blue-600 text-white hover:bg-blue-700 "%>
        
      <% end %>
    </div>  
  </div>
  

  <div class="  col-span-2 " >
    <div class="block h-full max-h-96 max-w-xs p-6 bg-white border border-gray-200 rounded-lg shadow hover:bg-gray-100 ">
      <ul>
        <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 ">User lists</h5>
         <% @users.each do |user| %>
          <li><%= user.username %></li> <!-- Adjust based on your User model -->
        <% end %>
      </ul>
    </div>
  </div>
</div>
